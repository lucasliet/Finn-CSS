{
  "name": "finn-css",
  "description": "Finn from adventure time drawed entirely in css",
  "version": "1.1.0",
  "author": "Lucas Souza <lucasouliveira@gmail.com>",
  "main": "electron-start.js",
  "repository": "https://github.com/lucasliet/Finn-CSS",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5"
  },
  "build": {
    "appId": "dev.lucasliet.finn-css",
    "productName": "Finn CSS",
    "mac": {
      "target": "zip",
      "category": "public.app-category.utilities",
      "icon": "assets/AppIcon.icns"
    }, 
    "win": {
      "target": "portable",
      "icon": "assets/AppIcon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "assets/AppIcon.png"
    }
  }
}
